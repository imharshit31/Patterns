Pattern is:

**********
****  ****
***    ***
**      **
*        *
*        *
**      **
***    ***
****  ****
**********

int n=5;
//n denotes the peak of the pattern

for(int i=0;i<2*n;i++){
    for(int j=0;j<2*n;j++)
        if(j>=n-min(i,2*n-1-i) and j<n+min(i,2*n-1-i)) cout<<" ";
        else cout<<"*";
    cout<<endl;
}
