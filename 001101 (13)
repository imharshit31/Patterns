Pattern is:

         *
        * *
       *   *
      *     *
     *       *
    *         *
   *           *
  *             *
 *               *
*******************

int n=10;
//n denotes the no of rows

for(int i=0;i<n;i++){
    for(int j=0;j<n+i;j++)
        if(i==n-1) cout<<"*";
        else
            if(j>=n-i-1 and (j==n-i-1 or j==n+i-1)) cout<<"*";
            else cout<<" ";
    cout<<endl;
}
