Pattern is:

*        *
**      **
***    ***
****  ****
**********
****  ****
***    ***
**      **
*        *

/*Same as 19th*/

int n=5;
//n denotes the peak of the pattern

for(int i=0;i<2*n-1;i++){
    for(int j=0;j<2*n;j++)
        if(j<=min(i,2*n-2-i) or 2*n-1-j<=min(i,2*n-2-i)) cout<<"*";
        else cout<<" ";
    cout<<endl;
}
