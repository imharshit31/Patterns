Pattern is:

*******************
 *               *
  *             *
   *           *
    *         *
     *       *
      *     *
       *   *
        * *
         *
         
int n=10;
//n denotes the no of rows

for(int i=0;i<n;i++){
    for(int j=0;j<2*n-1-i;j++)
        if(i==0) cout<<"*";
        else
            if(j==i or j==2*n-1-i-1) cout<<"*";
            else cout<<" ";
    cout<<endl;
}
